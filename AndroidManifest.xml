<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.live_safe"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
		<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	    <uses-permission android:name="android.permission.INTERNET" />
    	<uses-permission android:name="android.permission.SEND_SMS" />
    	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
		<uses-permission android:name="android.permission.RECORD_AUDIO" />
    	
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.live_safe.Registration_Page"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.live_safe.Main_Page"
            android:label="@string/app_name" />
         <activity
            android:name="com.example.live_safe.Emergency_Page"
            android:label="@string/app_name" />
         <activity
            android:name="com.example.live_safe.LoginPage"
            android:label="@string/app_name" />
         <activity
            android:name="com.example.live_safe.MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.example.live_safe.Service_Page"
            android:label="@string/app_name" />
         <activity
            android:name="com.example.live_safe.Uber_Page"
            android:label="@string/app_name" />
         <activity
            android:name="com.example.live_safe.Ola_Page"
            android:label="@string/app_name" />
         <activity
            android:name="com.example.live_safe.PT_Page"
            android:label="@string/app_name" />
        
    </application>

</manifest>